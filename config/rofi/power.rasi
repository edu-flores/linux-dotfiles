configuration {
	font: "JetBrainsMonoNL Nerd Font 20";
	show-icons: false;
}

window {
    width: 120;
    padding: 5;
    location: east;
    x-offset: -25;
}

mainbox {
    children: [listview];
}

element {
    padding: 30 5 30 0;
    background-color: @bg-alt;
    margin: 5;
}

element-text {
    vertical-align: 0.5;
    horizontal-align: 0.5;
    background-color: transparent;
}

listview {
    margin: 0;
    lines: 4;
    scrollbar: false;
}
